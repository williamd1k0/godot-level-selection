script/source = "extends GridContainer
export (String, FILE, \"*.json\") var level_data
var level = null
onready var dict = {}
signal selection_changed(scene_info)

func _ready():
	var f = File.new()
	if f.file_exists(level_data):
		f.open(level_data, f.READ)
		var text = f.get_as_text()
		dict.parse_json(text)
		f.close()
	get_child(0).grab_focus()

func _on_thumbnail_selected(scene, level_key):
	level = scene
	emit_signal(\"selection_changed\", \"%s \\n%s\\n\\nScore: %s/%s\"%[dict[level_key].name, dict[level_key].description,
	dict[level_key].score, dict[level_key].total])

func _on_thumbnail_pressed():
	get_tree().change_scene(level)"

